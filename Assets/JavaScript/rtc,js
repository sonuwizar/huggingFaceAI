function handleReceivedAudio(audioData) {
    // Send audioData to speech-to-text service for transcription
    // Receive transcribed text and send it to Unity
    var text = transcribeAudio(audioData);
    unityInstance.SendMessage("WhisperManager", "DisplayText", text);
}

